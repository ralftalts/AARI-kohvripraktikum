import RPi.GPIO as GPIO
import time

BUTTON = 18  # muuda GPIO pinni

GPIO.setmode(GPIO.BCM)
GPIO.setwarnings(False)
GPIO.setup(BUTTON, GPIO.IN, pull_up_down=GPIO.PUD_UP)

def callback(channel):
    print("Nupp vajutatud!")

try:
    GPIO.add_event_detect(BUTTON, GPIO.FALLING, callback=callback, bouncetime=300)
except RuntimeError as e:
    print(f"Katkestuse lisamine eba√µnnestus: {e}")
    GPIO.cleanup()
    exit(1)

try:
    while True:
        time.sleep(1)
except KeyboardInterrupt:
    GPIO.cleanup()
