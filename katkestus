import RPi.GPIO as GPIO
import time

AUTO_RED = 17
AUTO_YELLOW = 27
AUTO_GREEN = 22
PED_RED = 5
PED_GREEN = 6
BUTTON = 23           
BUTTON_LIGHT = 19

GPIO.setmode(GPIO.BCM)
GPIO.setwarnings(False)

for pin in [AUTO_RED, AUTO_YELLOW, AUTO_GREEN, PED_RED, PED_GREEN, BUTTON_LIGHT]:
    GPIO.setup(pin, GPIO.OUT)

GPIO.setup(BUTTON, GPIO.IN, pull_up_down=GPIO.PUD_UP)

# --- Katkestuse puhastamine (kui see on juba registreeritud) ---
try:
    GPIO.remove_event_detect(BUTTON)
except RuntimeError:
    pass  # ignoreeri, kui pole lisatud

button_pressed = False
debounce_time = 300  # ms

def button_callback(channel):
    global button_pressed
    button_pressed = True
    GPIO.output(BUTTON_LIGHT, True)
    print("Nupp vajutatud!")

# --- Katkestuse lisamine ---
GPIO.add_event_detect(BUTTON, GPIO.FALLING, callback=button_callback, bouncetime=debounce_time)

try:
    print("Foor töötab (katkestusega). Vajuta nuppu...")

    while True:
        # Autode punane
        GPIO.output(AUTO_RED, True)
        GPIO.output(AUTO_YELLOW, False)
        GPIO.output(AUTO_GREEN, False)

        if button_pressed:
            GPIO.output(PED_GREEN, True)
            GPIO.output(PED_RED, False)
            time.sleep(5)
            button_pressed = False
            GPIO.output(BUTTON_LIGHT, False)
        else:
            GPIO.output(PED_GREEN, False)
            GPIO.output(PED_RED, True)
            time.sleep(5)

        # Kollane
        GPIO.output(AUTO_RED, False)
        GPIO.output(AUTO_YELLOW, True)
        time.sleep(1)

        # Roheline
        GPIO.output(AUTO_YELLOW, False)
        GPIO.output(AUTO_GREEN, True)
        time.sleep(5)

        # Vilkuv kollane
        for _ in range(3):
            GPIO.output(AUTO_GREEN, False)
            GPIO.output(AUTO_YELLOW, True)
            time.sleep(0.33)
            GPIO.output(AUTO_YELLOW, False)
            time.sleep(0.33)

except KeyboardInterrupt:
    print("\nProgrammi katkestati käsitsi.")
finally:
    GPIO.cleanup()
    print("GPIO puhastatud ja programm suletud.")
